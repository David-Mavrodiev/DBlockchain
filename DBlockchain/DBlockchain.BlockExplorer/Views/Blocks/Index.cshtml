@model List<DBlockchain.Logic.Models.Block>

@{
    ViewData["Title"] = "All Blocks";
}
<div class="all-blocks-container">
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
        <h1>All Blocks</h1>
        <table class="table table-hover table-striped">
            <tbody>
                @foreach (var block in Model)
                {
                    <tr class="media">
                        <td class="media-left">
                            <h3><a href="/Blocks/Details/@block.Index">@block.Index</a></h3>
                        </td>
                        <td class="media-body">
                            <h4 class="media-heading font-yellow text-bold hidden-xs">
                                <b>Mined by: @block.MinedBy</b>
                            </h4>

                            <span>Creation date: <span class="label label-success">@block.DateCreated</span></span>
                            <br />
                            <span><strong>Transactions count:</strong> @block.Transactions.Count</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>